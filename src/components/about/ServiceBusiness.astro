<style>
  .service-business {
    padding: 0 16px;
    max-width: 1344px;
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
  }

  .content-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10rem;
    margin-top: 5rem;
  }

  .content-section-desktop {
    display: none;
  }

  .content-section-mobile {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10rem;
    margin-top: 5rem;
  }

  .info-stack {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 10rem;
  }

  .info-text {
    text-align: center;
  }

  .title {
    font-family: 'Inter', sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: #000;
    letter-spacing: -1.12px;
    margin: 0;
  }

  .info-list {
    padding-left: 25px;
    color: #000;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    letter-spacing: -0.84px;
    list-style-type: disc;
    margin: 1rem 0;
    text-align: left;
  }

  .info-list li {
    margin-bottom: 0.5rem;
  }

  .image-container img {
    max-width: 100%;
    height: auto;
  }

  .divider {
    border: 0;
    height: 1px;
    background-color: #000;
    margin: 20rem 2.5rem 10rem 2.5rem;
  }

  @media (min-width: 900px) {
    .content-section {
      flex-direction: row;
    }

    .content-section-desktop {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 10rem;
      margin-top: 12rem;
    }

    .content-section-mobile {
      display: none;
    }

    .info-text {
      text-align: left;
    }

    .title {
      font-size: 28px;
    }

    .info-list {
      display: block;
    }
  }
</style>